<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:ProgramaColores2"
             x:Class="ProgramaColores2.MainPage">

    <ScrollView>
        <StackLayout BackgroundColor="Blue" Margin="0,10,0,10" Padding="0,20,0,0">
            <Image Source="imagen.png.png" HorizontalOptions="Center" BackgroundColor="PowderBlue"></Image>
        </StackLayout>
        <Label Text="Violet" FontSize="30" HorizontalOptions="Center">Nombre de Usuario</Label>
        <TableView Intent="Form"  HasUnevenRows="True">
            <TableSection Title="Usuario">
                <ViewCell>
                    <ViewCell.View>
                        <StackLayout Orientation="Horizontal" Padding="10,10,10,10">
                            <Label Text="Edad" HorizontalOptions="Start" Margin="0,10,10,0" FontSize="">
                            </Label>
                            <EntryCell ></EntryCell>
                        </StackLayout>
                    </ViewCell.View>
                </ViewCell>
            </TableSection>
        </TableView>
        
    </ScrollView>

</ContentPage>
